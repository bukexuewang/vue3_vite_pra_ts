{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
    "types": [
      "vite/client",
      "node",
      "jest",
      "@types/testing-library__jest-dom"
    ]
  },
  "include": [
    ".env-config.ts",
    "src",
    "build",
    "vite.config.ts",
    "tests"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
}